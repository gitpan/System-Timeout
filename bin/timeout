#!/usr/bin/perl -w 
use System::Timeout qw(system);

{
    my $timeout = shift @ARGV;
    last unless $timeout;

    my ($secs) = $timeout =~ /--timeout=(\d+)$/;
    last unless($secs);

    my $r = system($secs, @ARGV);
    exit $r;
}
print "Usage: ./timeout --timeout=[SECONDS] [COMMAND] \n";
exit -1;
